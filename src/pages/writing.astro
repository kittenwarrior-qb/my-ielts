---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header';
import Footer from '../components/Footer';
import { Card } from '../components/ui';
---

<Layout title="IELTS Writing">
  <Header client:load />
  <main class="flex-1">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          IELTS Writing
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
          Essential vocabulary and phrases for IELTS Writing test
        </p>
      </div>

      <Card>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">✍️</div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-2">
            Coming Soon
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-6">
            Writing practice materials and vocabulary are being prepared
          </p>
          <div class="flex gap-3 justify-center">
            <a href="/vocabulary" class="btn btn-primary">
              Browse Vocabulary
            </a>
            <a href="/phrases" class="btn btn-secondary">
              Browse Phrases
            </a>
          </div>
        </div>
      </Card>

      <div class="mt-8 grid md:grid-cols-2 gap-6">
        <Card>
          <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3">
            Writing Tips
          </h3>
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li>• Plan before writing</li>
            <li>• Use formal language</li>
            <li>• Organize ideas clearly</li>
            <li>• Use linking words</li>
            <li>• Check grammar and spelling</li>
          </ul>
        </Card>

        <Card>
          <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-3">
            Test Tasks
          </h3>
          <ul class="space-y-2 text-gray-700 dark:text-gray-300">
            <li>• Task 1: Report/Letter (150 words, 20 min)</li>
            <li>• Task 2: Essay (250 words, 40 min)</li>
          </ul>
        </Card>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
