---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import { boardsRepo } from '../../../lib/repositories/boards';

// Fetch boards for vocabulary
const boards = await boardsRepo.getAll({ type: 'vocabulary' });
---

<DashboardLayout title="Vocabulary - Dashboard">
  <div class="p-8">
    <div class="max-w-7xl mx-auto">
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-black mb-2">Vocabulary Boards</h1>
        <p class="text-gray-600">Quản lý bộ từ vựng của bạn</p>
      </div>

      <!-- Boards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {boards.map((board) => (
          <a 
            href={`/dashboard/vocabulary/${board.id}`}
            class="border border-gray-200 bg-white p-6 hover:bg-gray-50"
          >
            <h3 class="font-semibold text-black mb-2">{board.name}</h3>
            <p class="text-sm text-gray-600 mb-3">{board.description || 'Không có mô tả'}</p>
            <div class="text-xs text-gray-500">
              {(board.itemIds as string[]).length} từ vựng
            </div>
          </a>
        ))}
      </div>

      {boards.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-500 mb-4">Chưa có bộ từ nào</p>
          <p class="text-sm text-gray-400">Nhấn "Tạo bộ từ mới" để bắt đầu</p>
        </div>
      )}
    </div>
  </div>
</DashboardLayout>
