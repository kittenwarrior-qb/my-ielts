---
import DashboardSPA from '../../components/dashboard/DashboardSPA';
import { getAdminStatus, isAuthenticated } from '../../lib/auth';

// Redirect to login if not authenticated
if (!isAuthenticated(Astro.cookies)) {
  return Astro.redirect('/login');
}

const adminStatus = getAdminStatus(Astro.cookies);
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Dashboard | My IELTS</title>
  </head>
  <body>
    <DashboardSPA client:only="react" isAdmin={adminStatus.isAdmin} />
  </body>
</html>

<style is:global>
  @import '../../styles/global.css';
</style>
