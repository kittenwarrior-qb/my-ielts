---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import { vocabularyRepo } from '../../lib/repositories/vocabulary';
import { expressionsRepo } from '../../lib/repositories/expressions';

// Fetch statistics
const vocabularyCount = await vocabularyRepo.count();
const expressionsCount = await expressionsRepo.count();
---

<DashboardLayout title="Dashboard">
  <div class="p-8">
    <div class="max-w-7xl mx-auto">
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-black mb-4">
          Dashboard
        </h1>
        <p class="text-xl text-gray-600">
          Welcome back! Continue your IELTS learning journey.
        </p>
      </div>

      {/* Statistics Cards */}
      <div class="grid md:grid-cols-3 gap-6 mb-12">
        <a href="/dashboard/vocabulary" class="border border-gray-200 bg-white p-8 hover:bg-gray-50">
          <div class="text-5xl font-extrabold text-black mb-4">{vocabularyCount}</div>
          <div class="text-xl font-bold text-black mb-2">Vocabulary</div>
          <p class="text-gray-600">Manage your IELTS vocabulary</p>
        </a>

        <a href="/dashboard/grammar" class="border border-gray-200 bg-white p-8 hover:bg-gray-50">
          <div class="text-5xl font-extrabold text-black mb-4">0</div>
          <div class="text-xl font-bold text-black mb-2">Grammar</div>
          <p class="text-gray-600">Learn grammar structures</p>
        </a>

        <a href="/dashboard/expressions" class="border border-gray-200 bg-white p-8 hover:bg-gray-50">
          <div class="text-5xl font-extrabold text-black mb-4">{expressionsCount}</div>
          <div class="text-xl font-bold text-black mb-2">Idioms</div>
          <p class="text-gray-600">Idioms & Phrases</p>
        </a>
      </div>

      {/* Quick Links */}
      <div class="grid md:grid-cols-2 gap-6">
        <div class="border border-gray-200 bg-white p-6">
          <h2 class="text-xl font-bold text-black mb-4">Quick Links</h2>
          <div class="space-y-3">
            <a href="/vocabulary" class="block text-black hover:underline">Browse All Vocabulary</a>
            <a href="/idioms" class="block text-black hover:underline">Browse Idioms</a>
            <a href="/phrases" class="block text-black hover:underline">Browse Phrases</a>
          </div>
        </div>

        <div class="border border-gray-200 bg-white p-6">
          <h2 class="text-xl font-bold text-black mb-4">Study Streak</h2>
          <div class="flex items-center gap-4">
            <div>
              <p class="text-3xl font-bold text-black">7 days</p>
              <p class="text-gray-600">Keep it up!</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
