---
import Layout from '../../layouts/Layout.astro';
import LoginForm from '../../components/admin/LoginForm';
import { isAuthenticated } from '../../lib/auth';

// Check if already logged in
if (isAuthenticated(Astro.cookies)) {
  return Astro.redirect('/admin/dashboard');
}
---

<Layout title="Admin Login">
  <div class="min-h-screen flex items-center justify-center bg-gray-50 dark:bg-gray-900 px-4">
    <div class="max-w-md w-full">
      {/* Logo/Title */}
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          my <span class="text-red-600">IELTS</span>
        </h1>
        <p class="text-gray-600 dark:text-gray-400">Admin Panel</p>
      </div>

      {/* Login Form */}
      <div class="card p-8">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100 mb-6">
          Sign In
        </h2>
        <LoginForm client:load />
      </div>

      {/* Back to Home */}
      <div class="text-center mt-6">
        <a
          href="/"
          class="text-sm text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400"
        >
          ‚Üê Back to Home
        </a>
      </div>
    </div>
  </div>
</Layout>
