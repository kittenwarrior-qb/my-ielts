---
import Layout from '../../layouts/Layout.astro';
import AdminLayout from '../../components/admin/AdminLayout';
import { requireAuth } from '../../lib/auth';
import { vocabularyRepo } from '../../lib/repositories/vocabulary';

// Check authentication
if (!requireAuth(Astro.cookies)) {
  return Astro.redirect('/admin');
}

// Get statistics
const allVocabulary = await vocabularyRepo.getAll();
const vocabularyCount = allVocabulary.length;

// Count by level
const beginnerCount = allVocabulary.filter(v => v.level === 'beginner').length;
const intermediateCount = allVocabulary.filter(v => v.level === 'intermediate').length;
const advancedCount = allVocabulary.filter(v => v.level === 'advanced').length;

// Recent additions (last 5)
const recentVocabulary = allVocabulary
  .sort((a, b) => new Date(b.createdAt).getTime() - new Date(a.createdAt).getTime())
  .slice(0, 5);
---

<Layout title="Admin Dashboard">
  <AdminLayout client:load>
    <div class="space-y-6">
      {/* Page Header */}
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-2">
          Dashboard
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
          Welcome to the admin panel
        </p>
      </div>

      {/* Statistics Cards */}
      <div class="grid md:grid-cols-4 gap-6">
        <div class="card p-6">
          <div class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-2">
            {vocabularyCount}
          </div>
          <div class="text-sm font-medium text-gray-600 dark:text-gray-400">
            Total Vocabulary
          </div>
        </div>

        <div class="card p-6">
          <div class="text-3xl font-bold text-green-600 dark:text-green-400 mb-2">
            {beginnerCount}
          </div>
          <div class="text-sm font-medium text-gray-600 dark:text-gray-400">
            Beginner Level
          </div>
        </div>

        <div class="card p-6">
          <div class="text-3xl font-bold text-yellow-600 dark:text-yellow-400 mb-2">
            {intermediateCount}
          </div>
          <div class="text-sm font-medium text-gray-600 dark:text-gray-400">
            Intermediate Level
          </div>
        </div>

        <div class="card p-6">
          <div class="text-3xl font-bold text-red-600 dark:text-red-400 mb-2">
            {advancedCount}
          </div>
          <div class="text-sm font-medium text-gray-600 dark:text-gray-400">
            Advanced Level
          </div>
        </div>
      </div>

      {/* Quick Actions */}
      <div class="card p-6">
        <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          Quick Actions
        </h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-4">
          <a
            href="/admin/vocabulary/new"
            class="p-4 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg hover:border-primary-500 dark:hover:border-primary-400 transition-colors text-center"
          >
            <div class="text-2xl mb-2">‚ûï</div>
            <div class="font-medium text-gray-900 dark:text-gray-100">Add Vocabulary</div>
          </a>

          <a
            href="/admin/vocabulary"
            class="p-4 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg hover:border-primary-500 dark:hover:border-primary-400 transition-colors text-center"
          >
            <div class="text-2xl mb-2">üìö</div>
            <div class="font-medium text-gray-900 dark:text-gray-100">Manage Vocabulary</div>
          </a>

          <a
            href="/admin/import"
            class="p-4 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg hover:border-primary-500 dark:hover:border-primary-400 transition-colors text-center"
          >
            <div class="text-2xl mb-2">üì•</div>
            <div class="font-medium text-gray-900 dark:text-gray-100">Bulk Import</div>
          </a>

          <a
            href="/vocabulary"
            class="p-4 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg hover:border-primary-500 dark:hover:border-primary-400 transition-colors text-center"
          >
            <div class="text-2xl mb-2">üëÅÔ∏è</div>
            <div class="font-medium text-gray-900 dark:text-gray-100">View Public Site</div>
          </a>
        </div>
      </div>

      {/* Recent Additions */}
      <div class="card p-6">
        <h2 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          Recent Additions
        </h2>
        {recentVocabulary.length > 0 ? (
          <div class="space-y-3">
            {recentVocabulary.map((vocab) => (
              <a
                href={`/vocabulary/${vocab.word}`}
                class="block p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
              >
                <div class="flex items-center justify-between">
                  <div>
                    <div class="font-semibold text-gray-900 dark:text-gray-100">
                      {vocab.word}
                    </div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">
                      {vocab.phonetic}
                    </div>
                  </div>
                  <div class="text-sm text-gray-500 dark:text-gray-400">
                    {new Date(vocab.createdAt).toLocaleDateString()}
                  </div>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <p class="text-gray-500 dark:text-gray-400">No vocabulary added yet</p>
        )}
      </div>
    </div>
  </AdminLayout>
</Layout>
