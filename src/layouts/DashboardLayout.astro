---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'IELTS Dashboard' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;500;600;700;800&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | my IELTS</title>
    <script is:inline>
      const theme = localStorage.getItem('theme') || 
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
  </head>
  <body class="min-h-screen flex bg-gray-50 dark:bg-gray-900">
    <!-- Sidebar -->
    <aside class="w-[280px] bg-white dark:bg-gray-800 border-r border-gray-200 dark:border-gray-700 fixed h-screen overflow-y-auto">
      <!-- Logo -->
      <div class="p-6 border-b border-gray-200 dark:border-gray-700">
        <h1 class="text-2xl font-extrabold text-gray-900 dark:text-gray-100">
          my <span class="text-ielts-500">IELTS</span>
        </h1>
      </div>

      <!-- Navigation -->
      <nav class="p-4 space-y-6">
        <!-- Dashboard Section -->
        <div>
          <h4 class="px-3 mb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
            Dashboard
          </h4>
          <div class="space-y-1">
            <a 
              href="/dashboard" 
              class={`flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                currentPath === '/dashboard' 
                  ? 'bg-ielts-50 text-ielts-600 dark:bg-ielts-900/20 dark:text-ielts-400' 
                  : 'text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700'
              }`}
            >
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Home
            </a>
          </div>
        </div>

        <!-- Vocabulary Section -->
        <div>
          <h4 class="px-3 mb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
            Vocabulary
          </h4>
          <div class="space-y-1">
            <a 
              href="/dashboard/vocabulary" 
              class={`flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                currentPath.startsWith('/dashboard/vocabulary') 
                  ? 'bg-ielts-50 text-ielts-600 dark:bg-ielts-900/20 dark:text-ielts-400' 
                  : 'text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700'
              }`}
            >
              All vocabulary
            </a>
            <a 
              href="/vocabulary" 
              class="flex items-center px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors"
            >
              By topics
            </a>
          </div>
        </div>

        <!-- Grammar Section -->
        <div>
          <h4 class="px-3 mb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
            Grammar
          </h4>
          <div class="space-y-1">
            <a 
              href="/dashboard/grammar" 
              class={`flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                currentPath.startsWith('/dashboard/grammar') 
                  ? 'bg-ielts-50 text-ielts-600 dark:bg-ielts-900/20 dark:text-ielts-400' 
                  : 'text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700'
              }`}
            >
              All grammar
            </a>
          </div>
        </div>

        <!-- Expression Section -->
        <div>
          <h4 class="px-3 mb-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
            Expression
          </h4>
          <div class="space-y-1">
            <a 
              href="/dashboard/expressions" 
              class={`flex items-center px-3 py-2 rounded-lg text-sm font-medium transition-colors ${
                currentPath.startsWith('/dashboard/expressions') 
                  ? 'bg-ielts-50 text-ielts-600 dark:bg-ielts-900/20 dark:text-ielts-400' 
                  : 'text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700'
              }`}
            >
              All expressions
            </a>
            <a 
              href="/idioms" 
              class="flex items-center px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors"
            >
              Idioms
            </a>
            <a 
              href="/phrases" 
              class="flex items-center px-3 py-2 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700 transition-colors"
            >
              Phrases
            </a>
          </div>
        </div>
      </nav>

      <!-- User Profile -->
      <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
        <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer transition-colors">
          <div class="w-10 h-10 rounded-full bg-gradient-to-br from-ielts-500 to-ielts-600 flex items-center justify-center text-white font-semibold">
            IL
          </div>
          <div class="flex-1">
            <p class="text-sm font-semibold text-gray-900 dark:text-gray-100">IELTS Learner</p>
            <p class="text-xs text-gray-500 dark:text-gray-400">user@example.com</p>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-[280px]">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
